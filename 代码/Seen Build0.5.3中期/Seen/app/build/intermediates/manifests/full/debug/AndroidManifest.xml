<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a8plus1.seen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的读写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 允许程序设置内置sd卡的创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.a8plus1.seen.MyApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.a8plus1.seen.StartActivity"
            android:theme="@style/main_activity_style" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.a8plus1.seen.MainActivity" >
        </activity>
        <activity android:name="com.a8plus1.seen.SettingActivity" >
        </activity>
        <activity android:name="com.a8plus1.seen.LoginActivity" >
        </activity>
        <activity
            android:name="com.a8plus1.seen.SignupActivity"
            android:theme="@style/Translucent" />
        <activity android:name="com.a8plus1.seen.LookTie.LookTieActivity" />
        <activity android:name="com.a8plus1.seen.SendTie.SendActivity" />

        <service android:name="com.lzy.okhttpserver.download.DownloadService" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />

        <activity android:name="com.zhihu.matisse.ui.MatisseActivity" />
        <activity android:name="com.zhihu.matisse.internal.ui.AlbumPreviewActivity" />
        <activity android:name="com.zhihu.matisse.internal.ui.SelectedPreviewActivity" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>